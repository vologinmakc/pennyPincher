# Используем официальный образ Node.js версии 14
FROM node:14

# Устанавливаем /usr/src/app в качестве рабочей директории в нашем контейнере
WORKDIR /usr/src/app

# Копируем файлы package.json и package-lock.json в рабочую директорию контейнера
COPY package*.json ./

# Устанавливаем все зависимости проекта
RUN npm install

# Копируем остальные файлы проекта в рабочую директорию контейнера
COPY . .

# Объявляем 8001 порт для работы приложения
EXPOSE 8001

# Задаем команду для запуска приложения через npm
CMD [ "npm", "run", "serve" ]
